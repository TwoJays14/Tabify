{
  "manifest_version": 2,
  "name": "Tabify",
  "version": "1.0",

  "description": "A tab manager",

  "icons": {
    "48": "icons/tabLogo.webp",
    "96": "icons/tabLogo.webp"
  },

  "permissions": [
    "menus",
    "tabs",
    "storage",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],

  "browser_action":{
    "default_popup": "popup.html"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "tabify@tabify.com"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["tabify.js"]
    }
  ]
}